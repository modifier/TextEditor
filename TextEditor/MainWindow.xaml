<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        MouseDown="Window_MouseDown">
    <Grid>
        <local:TextEditorControl Focusable="True" x:Name="textEditor" Grid.Column="0" Grid.Row="0" Margin="0,27,0,0"></local:TextEditorControl>
        <Button x:Name="openGrammar" Content="Open Grammar" HorizontalAlignment="Right" VerticalAlignment="Top" Width="92" Click="openGrammar_Click" Margin="0,0,150,0" />
        <Button x:Name="openHighlight" Content="Open Highlight Scheme" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Top" Width="135" Click="openHighlight_Click" />
        <Button x:Name="openFile" Content="Open" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="60" Click="openFile_Click" />
        <Button x:Name="saveFile" Content="Save" HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
